---
import Header from '../components/Header.astro';
import '@fontsource/libre-baskerville';


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/estilos.css">
	</head>
	<body>
		<div class=" fixed top-0 z-[-2] h-screen w-screen bg-[color:var(--gris0)] bg-[radial-gradient(ellipse_80%_80%_at_50%_-10%,var(--color1),rgba(255,255,255,0))]"></div>
		<Header />
		<slot />
	</body>
	<footer class="py-[80px]">
		
	</footer>
</html>
<style is:global>
	:root {
		/* Grises (de oscuro a claro) */
		--gris0:hsl(45, 10%, 3%);
		--gris1: hsl(45, 3%, 37%);
    	--gris2: hsl(45, 4%, 48%);
		--gris3: hsl(45, 12%, 50%);
		--gris4: hsl(48, 12%, 55%);
		--gris5: hsl(50, 12%, 70%);
		--gris6: hsl(50, 3%, 80%);

		/* Color (de oscuro a claro) */
		--color1:hsl(45, 100%, 10%);
		--color2:hsl(45, 80%, 15%);
		--color3:hsl(45, 50%, 50%);
		--color4:hsl(45, 40%, 60%);
		--color5:hsl(45, 100%, 90%);

	}
	html {
		font-family: 'Libre Baskerville', serif;
		scroll-behavior: smooth;
	}

	
	body {
		color:var(--gris3);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		background: var(--gris0);
		font-size: 16px;
		min-width: 800px;
	}

	header {
		position:fixed;
		right: 24px;
		z-index: 1000; /* Asegúrate de que esté por encima de otros elementos */
	}

	h2{
		font-size: 18px;
		font-weight: bold;
	}


</style>
